<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSettings">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2FF"
        tools:context=".SignIn">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="579sp"
            android:layout_height="252sp"
            android:translationY="-120sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/circle" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="201sp"
            android:layout_height="154sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:fontFamily="@font/seguibl"
            android:text="Account Settings"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <ScrollView
            android:layout_width="391sp"
            android:layout_height="592sp"
            android:foregroundGravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.5">

            <LinearLayout
                android:id="@+id/linearLayout_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintVertical_bias="0.38">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seguibl"
                    android:text="Personal Information:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seguibl"
                    android:paddingLeft="20sp"
                    android:text="Marital Status:"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/marital_card_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="20sp"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="5sp">

                    <Spinner
                        android:id="@+id/marital_spinner_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seguibl"
                    android:paddingLeft="20sp"
                    android:text="Education:"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/education_card_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="20sp"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="5sp">

                    <Spinner
                        android:id="@+id/education_spinner_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seguibl"
                    android:paddingLeft="20sp"
                    android:text="Profession:"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profession_card_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="20sp"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="5sp">

                    <Spinner
                        android:id="@+id/profession_spinner_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seguibl"
                    android:paddingLeft="20sp"
                    android:text="Country of Residence:"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/residence_card_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="20sp"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="5sp">

                    <Spinner
                        android:id="@+id/residence_spinner_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:fontFamily="@font/seguibl"
                    android:paddingLeft="20sp"
                    android:text="CNIC Issue Date:"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/issue_card_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="20sp"
                    android:foregroundGravity="center_horizontal"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="5sp">

                    <Button
                        android:id="@+id/issue_picker_settings"
                        style="?android:spinnerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="14-07-2004"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:fontFamily="@font/seguibl"
                    android:paddingLeft="20sp"
                    android:text="CNIC Expiry Date:"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/expiry_card_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="20sp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="5sp">

                    <Button
                        android:id="@+id/expiry_picker_settings"

                        style="?android:spinnerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="14-07-2004"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seguibl"
                    android:paddingTop="10sp"
                    android:text="Contact Information:"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp">

                    <TextView
                        android:id="@+id/textView325"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/seguibl"
                        android:text="Phone Number:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/phone_entry_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        android:maxLength="10" />

                    <TextView
                        android:id="@+id/textView324"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/seguibl"
                        android:text="Mobile Number:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/mobile_entry_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        android:maxLength="11" />

                    <TextView
                        android:id="@+id/textView329"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/seguibl"
                        android:text="Permenant Address:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/paddress_entry_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text" />

                    <TextView
                        android:id="@+id/textView3211"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/seguibl"
                        android:text="Current Address:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/caddress_entry_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text" />

                    <TextView
                        android:id="@+id/textView3254"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/seguibl"
                        android:text="City:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/city_entry_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text" />

                    <TextView
                        android:id="@+id/textViewResidence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:fontFamily="@font/seguibl"
                        android:text="Country:"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/country_card_settings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:elevation="5sp"
                        app:cardCornerRadius="20sp">

                        <Spinner
                            android:id="@+id/country_spinner_settings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:spinnerMode="dropdown"
                            android:textAlignment="center" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView3266"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/seguibl"
                        android:inputType="number"
                        android:text="Postal Code:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/postal_code_entry_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/seguibl"
                        android:text="Email:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/email_entry_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress" />

                    <Button
                        android:id="@+id/update_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:fontFamily="@font/seguibl"
                        android:text="Update"
                        android:textSize="24sp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/pg_account_settings"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_centerInParent="true"
            android:elevation="10sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.372" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>